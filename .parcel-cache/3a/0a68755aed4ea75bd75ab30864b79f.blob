* {
  box-sizing: border-box;
}

body {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: "Poppins", sans-serif;
  margin: 0;
  background-image: url("5d5fffa78f996a81b4e732d6f827c64b");
  background-size: cover;
  background-position: center center;
  min-height: 100vh;
}

h1 {
  font-weight: normal;
  font-size: 3rem;
  margin-top: 5rem;
}

.countdown-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

@media screen and (max-width: 728px) {
  .countdown-container {
    width: 50%;
  }
  .big-text {
    margin: 15px;
    padding: 15px;
  }
}

.big-text {
  font-size: 4rem;
  line-height: 1;
  margin: 0 2rem;
  font-weight: bold;
}

.countdown-el {
  text-align: center;
}

.countdown-el span {
  font-size: 1.3rem;
}
